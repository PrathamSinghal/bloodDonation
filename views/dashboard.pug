block dashboard area
    <!-- -----Dashboard Area Start---- -->
        div.dashboard-area.bg-area
            div.container
                div.row.w-100
                    div.col-md-3.col-sm-12
                        div.option-board
                            ul 
                                li 
                                    a(href="#")
                                        span 
                                            i.fa.fa-arrow-circle-o-right 
                                            |Dashboard 
                                li 
                                    a(href=`/adddetails/`+userid)
                                        span 
                                            i.fa.fa-arrow-circle-o-right 
                                            |Add Your Details
                                li 
                                    a(href="#")
                                        span 
                                            i.fa.fa-arrow-circle-o-right 
                                            |View Donors
                                li 
                                    a(href="#")
                                        span 
                                            i.fa.fa-arrow-circle-o-right 
                                            |Update Profile Info
                                li 
                                    a(href="#")
                                        span 
                                            i.fa.fa-arrow-circle-o-right 
                                            |Update Profile Photo
                                li 
                                    a(href="/home")
                                        span 
                                            i.fa.fa-arrow-circle-o-right 
                                            |Logout
                    div.col-md-9.col-sm-12
                        div.detail-dashboard
                            h1 Hi, #{nameofperson}
                            h3 Welcome to Your dashboard.
                            h4(style="margin-top: 30px;")
                                strong Statistics
                            div.row
                                div.col-md-4.col-sm-12.col-xs-12
                                    table.table.table-bordered     
                                        tbody 
                                            tr 
                                                td Your Total Donations :
                                                td 0
                                            tr 
                                                td  Last Donation Date :
                                                td  Null
                                            tr 
                                                td  Time Since Last Donation :
                                                td  Null
    <!-- -----Dashboard Area End---- -->

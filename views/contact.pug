extends base.pug 

block scripts 
    script(src="/static/index.js") 

block style 
    style 
        include ../static/home.css

block link
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css") 



block section form area
    <!-- -----section form area start----- -->
        section#home.banner
            div.container
                div.home-text
                    h1.h-primary 
                        |CONTACT US                
    <!-- -----section form area end----- -->    


block contact area 
    <!-- -----contact form area start----- -->
    div.contact-area.bg-area
        div.container
            div.contact-form
                div.contact-form-row
                    div.contact-item
                        div.contact-text
                            i.fa.fa-map-marker
                            h3 Address
                            p ABESIT, Ghaziabad
                    div.contact-item
                        div.contact-text
                            i.fa.fa-phone
                            h3 Email
                            p info@yourwebsite.com
                    div.contact-item
                        div.contact-text
                            i.fa.fa-envelope-o
                            h3 Phone
                            p 123-456-7878
                    div.contact-item
                        div.contact-text
                            i.fa.fa-fax
                            h3 Fax
                            p 123-456-7890
                div.contact-form-row
                    div.contact-form-item
                        form(action="/contact", method="post")
                            div.form-row
                                div.form-group
                                    label(for="Full Name") Full Name 
                                    input.form-control(type="text", name="visitor_name", placeholder="Full Name") 
                                div.form-group 
                                    label(for="Phone Number") Phone Number
                                    input.form-control(type="text", name="visitor_phone", placeholder="Phone Number") 
                                div.form-group 
                                    label(for="Email") Email
                                    input.form-control(type="text", name="visitor_email", placeholder="Email") 
                                div.form-group 
                                    label(for="Message") Message
                                    textarea.form-control(name="visitor_comment", cols="30", rows="10")  
                                button.btn.btn-primary(type="submit", name="form_contact") Submit    
                div.contact-form-row
                    div.map-area
                        //- iframe(src="", frameborder="0") 
                        iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3501.863766258948!2d77.44504581503634!3d28.633844882417247!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390cee3d4e3485ed%3A0xe0fe1689b57c7d2e!2sABESIT%20College%20of%20Engineering!5e0!3m2!1sen!2sin!4v1617252601227!5m2!1sen!2sin", width="600", height="450", style="border:0;" allowfullscreen="" loading="lazy")
    <!-- -----contact form area end----- -->
    